SCANNER = scanner
CC      = gcc
CFLAGS  = -Wall -Wextra -pedantic -g3
LEX     = flex
ifeq ($(shell uname),Darwin)
LIBS    = -ll
else
LIBS    = -lfl
endif

all: $(SCANNER)

$(SCANNER): $(SCANNER).c
	$(CC) $(CCFLAGS) $< -o $(SCANNER) $(LIBS)

$(SCANNER).c: %.c: %.l
	$(LEX) -o $@ $<

.PHONY: clean

clean:
	$(RM) $(SCANNER) $(SCANNER:=.c)
